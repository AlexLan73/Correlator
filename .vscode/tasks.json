{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build_debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake Configure (RelWithDebInfo)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build_reldeb",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j",
                "$(nproc)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "dependsOn": [
                "CMake Configure (Release)"
            ]
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build_debug",
                "-j",
                "$(nproc)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "dependsOn": [
                "CMake Configure (Debug)"
            ]
        },
        {
            "label": "Build (RelWithDebInfo)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build_reldeb",
                "-j",
                "$(nproc)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "dependsOn": [
                "CMake Configure (RelWithDebInfo)"
            ]
        },
        {
            "label": "Clean All Builds",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build",
                "build_debug",
                "build_reldeb"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j",
                "$(nproc)",
                "&&",
                "./build/Correlator"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [
                "CMake Configure"
            ]
        }
    ]
}